{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-3 mt-5 ">
            <button class="btn btn-secondary" data-toggle="modal" data-target="#employee-form">Создать</button>
            <div class="filter-toolbar"></div>
        </div>
        <div id="employee-list" class="table-responsive"></div>
    </div>
    <div class="modal fade" id="employee-form" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Сотрудник</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Имя
                                <input type="text" name="name" class="form-control">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Должность
                                <input type="text" name="position" class="form-control">
                            </label>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Пол
                                    <select name="gender" class="form-control">
                                        <option></option>
                                        <option value="м">мужской</option>
                                        <option value="ж">женский</option>
                                    </select>
                                </label>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Возраст
                                    <input type="number" name="age" class="form-control">
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
                        <button type="button" class="btn btn-secondary employee-remove">Удалить</button>
                        <div class="ml-auto">
                            <button type="reset" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                            <button type="submit" class="btn btn-secondary">Сохранить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">

{% endblock %}
